	<div class="w3layoutscontaineragileits">
		<h2>@language.GetKey("Qeydiyyat")</h2>
		<form method="post">
			<input type="text" asp-for="Name" placeholder="Ad">
			<input type="text" asp-for="Surname" placeholder="Soyad">
			<input type="text" asp-for="Username" placeholder="İstifadəçi adı">
			<input type="email" asp-for="Email" placeholder="Elektron ünvan...">
			<input type="password" asp-for="Password" placeholder="Şifrə">
			<input type="password" asp-for="ConfirmPassword" placeholder="Şifrə təkrarı">

			<ul class="agileinfotickwthree">
				<div asp-validation-summary="ModelOnly" class="text-danger" style="color:darkred"></div>
				<li>
					<input type="checkbox" id="brand1" asp-for="RuleAndContract"/>
					<label for="brand1" id="contract">
						<span></span>
						Şərtləri oxudum və qəbul edirəm!
					</label>

					<a asp-controller="Account" asp-action="Login">Hesabınız var?</a>
				</li>
			</ul>

			<div class="aitssendbuttonw3ls">
				<input type="submit" value="Qeydiyyat">

				<div class="clear"></div>
			</div>
		</form>
	</div>


	<script type="text/javascript" src="js/jquery-2.1.4.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="js/jquery.magnific-popup.js" type="text/javascript"></script>
	<script>
		$(document).ready(function () {
			$('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
				type: 'inline',
				fixedContentPos: false,
				fixedBgPos: true,
				overflowY: 'auto',
				closeBtnInside: true,
				preloader: false,
				midClick: true,
				removalDelay: 300,
				mainClass: 'my-mfp-zoom-in'
			});
		});
	</script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script>
		var info="Orxan Necəsən"
		$("#contract").on("click", function () {
			Swal.fire({
				title: 'Qaydalar və xəbərdarlıq!',
				text: info,
				icon: 'success',
				confirmButtonText: 'Geri'
			});
		});
		$(document).ready(function () {
			$("#contract").mouseover(function () {
				$("label").css("color", "red");
			});
			$("#contract").mouseout(function () {
				$("label").css("color", "white");
			});
		});
		
	</script>
