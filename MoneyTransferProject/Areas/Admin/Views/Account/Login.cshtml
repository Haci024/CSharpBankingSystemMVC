@model LoginVM 
@{
	Layout = null;
}
<!DOCTYPE html>
<html>

<!-- Head -->
<head>

	<title>Money Transfer</title>

	<!-- Meta-Tags -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<meta name="keywords" content="Existing Login Form Widget Responsive, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design">
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<!-- //Meta-Tags -->

	<link href="~/Admin/register/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />

	<!-- Style -->
	<link rel="stylesheet" href="~/Admin/register/css/style.css" type="text/css" media="all">

	<!-- Fonts -->
	<link href="//fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
	<!-- //Fonts -->

</head>
<!-- //Head -->
<!-- Body -->
<body>

	<h1>MoneyTransfer Login Page</h1>

	<div class="w3layoutscontaineragileits">
		<h2>Giriş</h2>
		<form method="post">
		
			<input type="text" asp-for="UserName" placeholder="İstifadəçi adı">
			
			<input type="password" asp-for="Password" placeholder="Şifrə">
		
			<div class="text-danger" asp-validation-summary="ModelOnly"></div><br />
			<ul class="agileinfotickwthree">
				<li>
					<a asp-controller="Account" asp-action="ForgetPasswordConfirmMail">Şifrəmi unutmuşam</a>
					<input type="checkbox" id="brand1" value="" >
					<label for="brand1"><span></span>Məni xatırla!</label>
					<a asp-controller="Account" asp-action="Register" asp-route-UserName="@User.Identity.Name">Hesabınız yoxdur?</a>
					<a asp-controller="Account" asp-action="ResendConfirmationEmail">Elektron ünvan təsdiq et</a>
				</li>
			</ul>
			<div class="aitssendbuttonw3ls">
				<input id="alert"  type="submit" value="Daxil ol!">

				<div class="clear"></div>
			</div>
		</form>
	</div>







	<script type="text/javascript" src="js/jquery-2.1.4.min.js"></script>

	<!-- pop-up-box-js-file -->
	<script src="js/jquery.magnific-popup.js" type="text/javascript"></script>
	<!--//pop-up-box-js-file -->
	<script>
		$(document).ready(function () {
			$('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
				type: 'inline',
				fixedContentPos: false,
				fixedBgPos: true,
				overflowY: 'auto',
				closeBtnInside: true,
				preloader: false,
				midClick: true,
				removalDelay: 300,
				mainClass: 'my-mfp-zoom-in'
			});

		});
	</script>
	


</body>
<!-- //Body -->

</html>

	<script>
	const btn = document.getElementById('alert');
	button.addEventListener('click', e => {
		e.preventDefault();

		Swal.fire({
			text: "Sənəd uğurla endirildi!",
			icon: "success",
			buttonsStyling: false,
			confirmButtonText: "Ok!",
			customClass: {
				confirmButton: "btn btn-primary"
			}
		});
	});
	</script>