@model IEnumerable<EntityLayer.Concrete.CustomerAccount>
@{
    ViewData["Title"] = "AllCards";
    Layout = "~/Areas/Admin/Views/CustomerLayout/Index.cshtml";
}


    <link href="~/gentela-gh-pages/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/gentela-gh-pages/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">

    <link href="~/gentela-gh-pages/vendors/nprogress/nprogress.css" rel="stylesheet">
<link href="~/gentela-gh-pages/vendors/normalize-css/normalize.css" rel="stylesheet">
<link href="~/gentela-gh-pages/vendors/ion.rangeSlider/css/ion.rangeSlider.css" rel="stylesheet">
<link href="~/gentela-gh-pages/vendors/ion.rangeSlider/css/ion.rangeSlider.skinFlat.css" rel="stylesheet">
<!-- Bootstrap Colorpicker -->
<link href="~/gentela-gh-pages/vendors/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css" rel="stylesheet">

<link href="~/gentela-gh-pages/vendors/cropper/dist/cropper.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="~/gentela-gh-pages/build/css/custom.min.css" rel="stylesheet">

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="text-center">
                <h3>Bank hesablarım</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                     
                      
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <!-- form input mask -->
           
          
                      @foreach (var item in Model)
                        {
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>@item.Valutas.Currency</h2>
                           
                            <ul class="nav navbar-right panel_toolbox">
                               
                                @item.AppUser.Name @item.AppUser.Surname
                          
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                            <form class="form-horizontal form-label-left">

                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-3">Kart nömrəsi</label>
                                    <div class="col-md-9 col-sm-9 col-xs-9">
                                        <input type="text" class="form-control" asp-for="@item.AccountNumber" data-inputmask="'mask' : '9999-9999-9999-9999'" disabled>
                                        <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                                    </div>
                                </div>
                            
                            
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-3">Balans</label>
                                    <div class="col-md-9 col-sm-9 col-xs-9">
                                        <input type="text" class="form-control" value="@item.Balance @item.Valutas.Currency"  disabled/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-3">Telefon nömrəsi</label>
                                    <div class="col-md-9 col-sm-9 col-xs-9">
                                        <input type="text" asp-for="@item.AppUser.PhoneNumber" class="form-control"  data-inputmask="'mask' :'(999) 999-99-99'" disabled>
                                        <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-3">Alınan məntəqə</label>
                                    <div class="col-md-9 col-sm-9 col-xs-9">
                                        <input type="text" asp-for="@item.BankBranch" class="form-control" disabled>
                                        <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-9 col-md-offset-6">
                                        <a asp-controller="MoneyTransfer" asp-action="MyLastProcessListForOneCard" asp-route-valuta="@item.Valutas.Currency" class="btn btn-primary"><i class="fa fa-table"></i></a>
                                        <a asp-controller="CardProcess" asp-action="UpdateCardPassword" class="btn btn-success"><i class="fa fa-key"></i></a> 
                                        <a asp-controller="CardProcess" asp-action="EditCardInfo" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a asp-controller="CardProcess" asp-action="BlockCard" class="btn btn-danger"><i class="glyphicon glyphicon-lock"></i></a>
                           
                                    </div>
                                </div>
                               
                          
                            </form>
               
                        </div>
              
                    </div>
              
            </div>
           
          
                        }

                  
            <!-- /form input mask -->
            <!-- form color picker -->
        
            <!-- /form color picker -->
            <!-- form input knob -->
         
            <!-- /form input knob -->

        </div>




     
    </div>
</div>
