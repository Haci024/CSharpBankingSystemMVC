@model IEnumerable<EntityLayer.Concrete.MonthlyPayment>

@{
    ViewData["Title"] = "MyCredits";
    Layout = "~/Areas/Admin/Views/CustomerLayout/Index.cshtml";
    int num = 0;
}

<link href="~/gentela-gh-pages/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

<link href="~/gentela-gh-pages/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">

<link href="~/gentela-gh-pages/vendors/nprogress/nprogress.css" rel="stylesheet">

<link href="~/gentela-gh-pages/build/css/custom.min.css" rel="stylesheet">
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Odissey Bank</h3>
            </div>
           
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Axtar...</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">

                    <div class="x_content">

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2 class="text-center">Kredit ödənişləri(Aylıq)</h2>
                                    <h2 class="navbar-right">Qalıq borc:@ViewBag.RemainingMoney</h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>


                                <table id="datatable-buttons" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Ödəniş tarixləri</th>
                                            <th>Ödənilməli məbləğ</th>
                                           
                                            <th>Ödəniş zamanı</th>
                                            <th>Ödənilən məbləğ</th>
                                            <th>Status</th>
                                            <th>Ödəniş et</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Credit.CustomerAccount.AppUser.UserName == User.Identity.Name)
                                            {
                                                <tr>
                                                    <td>@(num=num+1)</td>
                                                    <td>@item.PaymentDate.ToString("dd.MMMM.yyyy")</td>
                                                 
                                                    <td> @item.Payment @item.Credit.CustomerAccount.Valutas.Currency</td>
                                                    <td>
                                                        @if (item.IsPay == true)
                                                        {
                                                         @item.ProcessDate.ToString("g")  
                                                        }
                                                        else
                                                        {
                                                        <span>Ödəniş edilməyib</span> 
                                                        }


                                                    </td>

                                                    <td>@item.PayMoney</td>
                                                    <td>@if (item.IsPay==true)
                                                        {
                                                            <span class="btn btn-success"><i class="fa fa-check"></i></span>
                                                        }
                                                        else
                                                        {
                                                            <span class="btn btn-danger"><i class="fa fa-times-circle"></i></span>
                                                        }
                                                    </td>
                                     
                                                    <td>
                                                        @if (item.IsPay==true)
                                                        {
                                                         <a class="btn btn-warning" asp-action="MonthlyFax" asp-route-id="@item.Id"><i class="fa fa-file-pdf"></i></a> 
                                                        }
                                                        else
                                                        {
                                                            <a class="btn btn-success" asp-controller="Credit" asp-action="PayCredit" asp-route-id="@item.Id"><i class="fa fa-money"></i></a>
                                                        }

                                                    </td>
                                                </tr>
                                            }

                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


