@model EntityLayer.Concrete.Credits
@{
    ViewData["Title"] = "UploadFax";
    Layout = "~/Areas/Admin/Views/CustomerLayout/Index.cshtml";
}
<!-- Font Awesome -->
<link href="~/gentela-gh-pages/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
<!-- NProgress -->
<link href="~/gentela-gh-pages/vendors/nprogress/nprogress.css" rel="stylesheet">
<!-- Dropzone.js -->
<link href="~/gentela-gh-pages/vendors/dropzone/dist/min/dropzone.min.css" rel="stylesheet">

<!-- Custom Theme Style -->
<link href="../build/css/custom.min.css" rel="stylesheet">
<h2>UploadFax</h2>
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Form Upload </h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Dropzone multiple file uploader</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p>Kredit sözləşməsini buraya yükləyin!</p>
                        <form method="post" enctype="multipart/form-data">
                            <input type="file"  asp-for="Fax" />
                            <button type="submit">Upload File</button>
                            <div asp-validation-summary="ModelOnly" style="color:red"></div>
                        </form>
                        <br />
                        <br />
                        <br />
                        <br />
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/gentela-gh-pages/vendors/vendors/bootstrap/dist/js/bootstrap.min.js"></script>

<script src=" ~/gentela-gh-pages/vendors/fastclick/lib/fastclick.js"></script>

<script src="~/gentela-gh-pages/vendors/nprogress/nprogress.js"></script>

<script src="~/gentela-gh-pages/vendors/dropzone/dist/min/dropzone.min.js"></script>

