@model MoneyTransferProject.ViewModels.HomeVM
@inject LanguageService language
<section class="site-section" id="blog-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center" data-aos="fade">
                <h2 class="section-title mb-3">@language.GetKey("Xəbərlər")</h2>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model.BlogNews)
            {
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-4" data-aos="fade-up" data-aos-delay="">
                    <div class="h-entry">
                        <a href="single.html">
                            <img src="~/images/@item.Image" alt="Image" class="img-fluid" style="width:320px;height:250px">
                        </a>
                        <h2 class="font-size-regular"><a href="#">@language.GetKey(item.Title)</a></h2>
                        <div class="meta mb-4">@item.AuthorName <span class="mx-2">&bullet;</span><span class="mx-2">@(((DateTime)item.CreateDate).ToString("dd.MM.yyyy")) &bullet;</span><a href="#">News</a></div>
                        <p>@language.GetKey(item.Description)</p>
                        <p><a asp-controller="News" asp-action="Detail" asp-route-id="@item.ID">@language.GetKey("Ardını oxu...")</a></p>
                    </div>
                </div>
            }



        </div>
    </div>
</section>